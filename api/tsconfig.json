{
  "compilerOptions": {
    "baseUrl": "src",
    "rootDir": ".",
    "outDir": "dist",
    "target": "es6",
    "module": "commonjs",
    "lib": ["ESNext"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": true,
    "declaration": true,
    "skipLibCheck": true,
    "importHelpers": true,
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*.tsx", "./src/**/*.ts"],
}
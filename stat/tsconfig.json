{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@root/*": ["src/*"],
      "@resolvers/*": ["src/resolvers/*"]
    },
    "rootDir": "src",
    "outDir": "dist",
    "target": "ES2018",
    "module": "commonjs",
    "lib": ["ESNext"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"],
}